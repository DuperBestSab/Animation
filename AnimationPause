-- UNIVERSAL IDLE FREEZE – WORKS IN EVERY GAME (2025)
-- Run ONCE after spawning. You move, pose stays frozen for all.

local Players       = game:GetService("Players")
local RunService    = game:GetService("RunService")
local player        = Players.LocalPlayer
local character     = player.Character or player.CharacterAdded:Wait()
local humanoid      = character:WaitForChild("Humanoid")
local root          = character:WaitForChild("HumanoidRootPart")

-- Wait for full character load (R15/R6, custom rigs)
repeat task.wait() until #character:GetDescendants() >= 50

-- Stop all animations instantly
for _, track in ipairs(humanoid:GetPlayingAnimationTracks()) do
    track:Stop(0)
end

-- Force idle state and let pose settle
humanoid:ChangeState(Enum.HumanoidStateType.Running)
task.wait(0.3)

-- Capture current Motor6D transforms (this is your idle pose)
local frozenPose = {}
for _, motor in ipairs(character:GetDescendants()) do
    if motor:IsA("Motor6D") then
        frozenPose[motor] = { C0 = motor.C0, C1 = motor.C1 }
    end
end

-- Disable Animator to prevent game from re-animating
local animator = humanoid:FindFirstChildOfClass("Animator")
if animator then
    animator.Enabled = false
    -- Re-disable if game tries to turn it back on
    animator:GetPropertyChangedSignal("Enabled"):Connect(function()
        task.spawn(function()
            task.wait()
            animator.Enabled = false
        end)
    end)
end

-- Slow update loop (~15 FPS) to bypass anti-cheat rate limits
local lastUpdate = 0
local conn
conn = RunService.Heartbeat:Connect(function(time)
    if not character.Parent or not root.Parent then
        conn:Disconnect()
        return
    end
    if time - lastUpdate < 0.066 then return end  -- ~15 FPS
    lastUpdate = time

    for motor, data in pairs(frozenPose) do
        if motor.Parent then
            motor.C0 = data.C0
            motor.C1 = data.C1
        end
    end
end)

-- Ensure movement works (some games nerf it)
humanoid.WalkSpeed = 16
humanoid.JumpPower = 50

print("UNIVERSAL IDLE FREEZE ACTIVE: Pose locked – move freely, seen by all!")
